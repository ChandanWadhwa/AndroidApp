<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.digcoins.digitalcoinsexchange.BuyCoinFragment" >

   
   
   <LinearLayout 
       android:id="@+id/tabs"
       android:layout_width="fill_parent"
       android:layout_height="55dp"
       android:orientation="horizontal"
       android:gravity="center_horizontal"
       android:background="@drawable/tabbg"
       >
      <Button 
          android:id="@+id/btnbuyads"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:text="BUY ADS"
          android:textSize="13sp"
         
          android:background="@android:color/transparent"
          android:textColor="#ffffff"
          android:drawableLeft="@drawable/buyads"
          />
       <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_marginTop="10dp"
            />
        <Button 
          android:id="@+id/btnsellads"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:text="SELL ADS"
          android:textSize="13sp"
          
          android:background="@android:color/transparent"
          android:textColor="#ffffff"
          android:drawableLeft="@drawable/sellads"
          android:layout_marginLeft="10dp"
          />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_marginTop="10dp"
            />
          <Button 
          android:id="@+id/btnlocation"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:text="LOCATION"
          android:textSize="13sp"
          
          android:background="@android:color/transparent"
          android:textColor="#ffffff"
          android:drawableLeft="@drawable/locaation"
          android:layout_marginLeft="10dp"
          />
          
         
       
   </LinearLayout>
   <LinearLayout 
       android:id="@+id/coinrate"
       android:layout_below="@+id/tabs"
       android:layout_width="fill_parent"
      android:layout_height="65dp"
      android:background="@drawable/coinrate"
      android:orientation="horizontal"
       ></LinearLayout>
   
   <FrameLayout
            android:id="@+id/frag_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/coinrate"
            >
<!--     <TextView  -->
<!--               android:layout_width="wrap_content" -->
<!--               android:layout_height="wrap_content" -->
<!--               android:text="BUY ADS" -->
<!--               /> -->
   </FrameLayout>
   
</RelativeLayout>
